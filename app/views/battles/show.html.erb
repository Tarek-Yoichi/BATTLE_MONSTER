<div class="container chatroom">
  <h1>Combat #<%= @battle.id %></h1>

  <div id="arena">
    <p><%= @deck1.user.name %> (<%= @deck1.hp %> hp) vs. <%= @deck2.user.name %> (<%= @deck2.hp %> hp)</p>
  </div>

  <% if @deck1.hp == 0 %>
    <h3>Round <%= @battle.round - 1 %></h3>
    <p>Game Over - <%= @deck2.user.name %> wins ! (<%= @deck2.hp %> hp)</p>
  <% elsif @deck2.hp == 0 %>
    <h3>Round <%= @battle.round - 1 %></h3>
    <p>Game Over - <%= @deck1.user.name %> wins ! (<%= @deck1.hp %> hp)</p>
  <% else %>
    <div id="round">
      <h3>Round <%= @battle.round %></h3>
      <% if @current_deck.user == current_user %>
        <p><%= @current_deck.user.name %> Ã  toi de jouer > <a href="<%= battle_next_round_path(@battle, @next_deck) %>">Lancer <%= @battle.current_deck.attack.name %> !</a></p>
      <% else %>
        <p>Votre adversaire est en train de jouer ! > <a href="/battles/1">recharger !</a></p>
      <% end %>
    </div>
  <% end %>
</div>
